{
  "project": {
    "name": "EAI Schema Toolkit",
    "type": "enterprise-integration-tool",
    "version": "1.0.0"
  },
  "hooks": {
    "typescript-quality-check": {
      "enabled": true,
      "priority": "high",
      "category": "code-quality",
      "description": "TypeScript 코드 품질 및 보안 검사",
      "triggers": ["file_save"],
      "patterns": ["src/**/*.ts", "src/**/*.tsx"],
      "exclude": ["**/*.test.ts", "**/*.spec.ts", "**/*.d.ts"],
      "tags": ["typescript", "quality", "security"]
    },
    "api-security-check": {
      "enabled": true,
      "priority": "critical",
      "category": "security",
      "description": "API 라우터 보안 검사",
      "triggers": ["file_save"],
      "patterns": ["src/routes/*.ts", "src/routes/**/*.ts"],
      "exclude": [],
      "tags": ["api", "security", "routes"]
    },
    "test-completeness-check": {
      "enabled": true,
      "priority": "medium",
      "category": "testing",
      "description": "테스트 완성도 및 커버리지 검사",
      "triggers": ["file_save"],
      "patterns": ["**/*.test.ts", "**/*.spec.ts", "src/__tests__/**/*.ts"],
      "exclude": [],
      "tags": ["testing", "coverage", "quality"]
    },
    "schema-processing-security": {
      "enabled": true,
      "priority": "critical",
      "category": "security",
      "description": "스키마 처리 보안 검사",
      "triggers": ["file_save"],
      "patterns": [
        "src/services/*Schema*.ts",
        "src/services/*Validation*.ts",
        "src/services/messageMappingService.ts",
        "src/services/fileUploadService.ts"
      ],
      "exclude": [],
      "tags": ["schema", "security", "performance", "xml", "json", "yaml"]
    },
    "environment-config-security": {
      "enabled": true,
      "priority": "high",
      "category": "security",
      "description": "환경 설정 보안 검사",
      "triggers": ["file_save"],
      "patterns": [
        ".env*",
        "*.config.js",
        "*.config.ts",
        "config/*.ts",
        "config/*.js",
        "package.json",
        "Procfile"
      ],
      "exclude": [],
      "tags": ["config", "security", "deployment", "environment"]
    },
    "mcp-integration-check": {
      "enabled": true,
      "priority": "medium",
      "category": "architecture",
      "description": "MCP 통합 아키텍처 검사",
      "triggers": ["file_save"],
      "patterns": [
        "src/mcp/*.ts",
        "src/mcp/**/*.ts",
        "mcp-server/**/*.ts",
        "mcp-server/**/*.js"
      ],
      "exclude": [],
      "tags": ["mcp", "integration", "architecture", "extensibility"]
    },
    "realtime-collaboration-check": {
      "enabled": true,
      "priority": "high",
      "category": "performance",
      "description": "실시간 협업 기능 검사",
      "triggers": ["file_save"],
      "patterns": [
        "src/routes/collaboration.ts",
        "src/services/CollaborationService.ts",
        "src/middleware/*collaboration*.ts"
      ],
      "exclude": [],
      "tags": ["websocket", "collaboration", "realtime", "performance"]
    },
    "documentation-quality-check": {
      "enabled": true,
      "priority": "medium",
      "category": "documentation",
      "description": "문서 품질 및 한국어 검사",
      "triggers": ["file_save"],
      "patterns": [
        "README.md",
        "docs/*.md",
        "docs/**/*.md",
        ".kiro/**/*.md",
        "**/*.md"
      ],
      "exclude": ["node_modules/**/*.md", "dist/**/*.md"],
      "tags": ["documentation", "korean", "quality", "accuracy"]
    },
    "deployment-readiness-check": {
      "enabled": true,
      "priority": "critical",
      "category": "deployment",
      "description": "배포 준비 상태 검사",
      "triggers": ["file_save"],
      "patterns": [
        ".github/workflows/*.yml",
        ".github/workflows/*.yaml",
        "Procfile",
        "package.json",
        "release.config.json",
        "scripts/*.sh"
      ],
      "exclude": [],
      "tags": ["deployment", "cicd", "heroku", "github-actions"]
    }
  },
  "categories": {
    "security": {
      "description": "보안 관련 검사",
      "priority": "critical",
      "color": "#ff4444"
    },
    "code-quality": {
      "description": "코드 품질 검사",
      "priority": "high",
      "color": "#44ff44"
    },
    "testing": {
      "description": "테스트 관련 검사",
      "priority": "medium",
      "color": "#4444ff"
    },
    "architecture": {
      "description": "아키텍처 검사",
      "priority": "medium",
      "color": "#ff8844"
    },
    "performance": {
      "description": "성능 관련 검사",
      "priority": "high",
      "color": "#8844ff"
    },
    "documentation": {
      "description": "문서화 검사",
      "priority": "medium",
      "color": "#44ffff"
    },
    "deployment": {
      "description": "배포 관련 검사",
      "priority": "critical",
      "color": "#ff44ff"
    }
  },
  "settings": {
    "autoEnable": true,
    "maxConcurrentHooks": 3,
    "timeoutSeconds": 30,
    "retryAttempts": 2,
    "logLevel": "info",
    "notifications": {
      "critical": true,
      "high": true,
      "medium": false
    }
  },
  "presets": {
    "development": {
      "description": "개발 단계에 적합한 hook 설정",
      "enabledHooks": [
        "typescript-quality-check",
        "api-security-check",
        "schema-processing-security"
      ]
    },
    "testing": {
      "description": "테스트 단계에 적합한 hook 설정",
      "enabledHooks": [
        "typescript-quality-check",
        "api-security-check",
        "test-completeness-check",
        "schema-processing-security"
      ]
    },
    "pre-deployment": {
      "description": "배포 전 검사에 적합한 hook 설정",
      "enabledHooks": [
        "api-security-check",
        "schema-processing-security",
        "environment-config-security",
        "deployment-readiness-check",
        "documentation-quality-check"
      ]
    },
    "production": {
      "description": "프로덕션 운영에 적합한 hook 설정",
      "enabledHooks": [
        "api-security-check",
        "schema-processing-security",
        "environment-config-security",
        "realtime-collaboration-check",
        "deployment-readiness-check"
      ]
    },
    "full": {
      "description": "모든 hook 활성화",
      "enabledHooks": [
        "typescript-quality-check",
        "api-security-check",
        "test-completeness-check",
        "schema-processing-security",
        "environment-config-security",
        "mcp-integration-check",
        "realtime-collaboration-check",
        "documentation-quality-check",
        "deployment-readiness-check"
      ]
    }
  }
}