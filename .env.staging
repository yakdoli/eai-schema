# 스테이징 환경 설정
NODE_ENV=staging
PORT=${PORT:-3000}

# 데이터베이스 설정
DATABASE_URL=${DATABASE_URL}

# 로깅 설정
LOG_LEVEL=info
LOG_FORMAT=json

# 보안 설정
JWT_SECRET=${JWT_SECRET}
BCRYPT_ROUNDS=12

# CORS 설정
CORS_ORIGIN=https://yakdoli.github.io,https://eai-schema-staging.herokuapp.com
CORS_CREDENTIALS=true

# 외부 서비스
EXTERNAL_API_TIMEOUT=10000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 파일 업로드 설정
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=xml,json,yaml,xsd,wsdl,csv

# WebSocket 설정
WS_HEARTBEAT_INTERVAL=30000
WS_HEARTBEAT_TIMEOUT=10000

# 메트릭 설정
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# 캐시 설정
REDIS_URL=${REDIS_URL}
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 모니터링
HEALTH_CHECK_TIMEOUT=5000
PERFORMANCE_MONITORING=true

# 스테이징 특화 설정
STAGING_MODE=true
DEBUG_MODE=false