# CI/CD 환경 설정
NODE_ENV=test
PORT=3000

# 테스트 데이터베이스 설정
TEST_DB_URL=memory://test

# 로깅 설정
LOG_LEVEL=error
LOG_FORMAT=json

# 보안 설정
JWT_SECRET=test-secret-key-for-ci-only
BCRYPT_ROUNDS=4

# 외부 서비스 (테스트용 모킹)
EXTERNAL_API_TIMEOUT=5000
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# 파일 업로드 설정
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=xml,json,yaml,xsd,wsdl

# WebSocket 설정
WS_HEARTBEAT_INTERVAL=30000
WS_HEARTBEAT_TIMEOUT=5000

# 메트릭 설정
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# 캐시 설정 (테스트용)
CACHE_TTL=300
CACHE_MAX_SIZE=100