{
  "name": "eai-schema-toolkit",
  "version": "1.0.0",
  "description": "EAI Schema Toolkit - Enterprise Application Integration Schema Conversion and Validation Tool",
  "homepage": "https://yakdoli.github.io/eai-schema/",
  "repository": {
    "type": "git",
    "url": "https://github.com/yakdoli/eai-schema.git"
  },
  "bugs": {
    "url": "https://github.com/yakdoli/eai-schema/issues"
  },
  "keywords": [
    "eai",
    "schema",
    "xml",
    "json",
    "yaml",
    "conversion",
    "validation",
    "enterprise"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "npx tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=services",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rimraf dist",
    "deploy": "npm run build && gh-pages -d docs",
    "predeploy": "npm run build",
    "heroku-prebuild": "echo \"Prebuild script executed\"",
    "heroku-postbuild": "npm run build",
    "test:all": "./scripts/test-runner.sh",
    "mcp:start": "cd mcp-server && npm start",
    "mcp:install": "cd mcp-server && npm install"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "express-rate-limit": "^6.8.0",
    "fast-xml-parser": "^4.2.5",
    "helmet": "^7.0.0",
    "js-yaml": "^4.1.0",
    "libxmljs2": "^0.37.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "prom-client": "^15.1.3",
    "prometheus-gc-stats": "^1.1.0",
    "socket.io": "^4.8.1",
    "winston": "^3.10.0",
    "xml-js": "^1.6.11",
    "xmldom": "^0.6.0",
    "yaml-validator": "^5.1.0"
  },
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.0",
    "@types/multer": "^1.4.0",
    "@types/node": "^20.19.12",
    "@types/socket.io": "^3.0.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "gh-pages": "^6.0.0",
    "jest": "^29.5.0",
    "rimraf": "^5.0.0",
    "semantic-release": "^21.0.7",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "tsx": "^3.12.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
